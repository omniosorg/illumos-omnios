OUTPUT_FORMAT("elf64-littleaarch64")
OUTPUT_ARCH(aarch64)
ENTRY(_start)


SECTIONS
{
	. = 0x00080000;
	_BootStart = .;
	.text : {
		*(.text)
		*(.text.*)
		. = ALIGN(0x16);
		*(.rodata)
		*(.rodata.*)
		_etext = .;
	}
	.data : {
		*(.data)
		*(.data.*)
		CONSTRUCTORS
		*(.got)
		*(.got.*)
		*(.sdata)
		*(.sdata.*)
		. = ALIGN(0x8);
		_edata = .;

		*(.sbss)
		*(.sbss.*)
		*(.scommon)
		*(.bss)
		*(.bss.*)
		*(COMMON)
		. = ALIGN(0x8);
		_ebss = .;
	}
	. = ALIGN(0x1000);
	_end = . ;
	. = . + 0x10000;
	_BootStackTop = .;
	_LogBuf       = .;
	. = . + 0x100000;
	_BootScratch  = .;
	. = . + 0x03000000;
	_RamdiskStart = .;
	. = . + 0x0c000000;
	_RamdiskEnd  = .;
	_dtb_start   = .;
	. = . + 0x20000;
	_BootEnd     = .;
}
